generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}



model Product {
  id           String     @id @default(uuid())
  name        String
  slug     String @unique
  brand String?
  img       String
  description       String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  releaseYear  Int?
  parentCategoryID  String
  parentCategorySlug  String
  childCategorySlug  String?
  childCategoryID  String?
  order       Int @default(autoincrement())

}

model Category {
  id           String     @id @default(uuid())
  name        String
  slug     String @unique
  img_light       String
  img_dark       String
  order       Int @default(autoincrement())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model ChildCategory {
  id           String     @id @default(uuid())
  name        String
  slug     String @unique
  img_light       String
  img_dark       String
  parentCategoryID       String
  order       Int @default(autoincrement())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model RepairService {
  id           String     @id @default(uuid())
  name        String
  repairCode     String
  img_light       String
  img_dark       String
  order       Int @default(autoincrement())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model RepairServiceSingle {
  id           String     @id @default(uuid())
  repairCode     String
  price       String?
  duration       String?
  productID       String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

